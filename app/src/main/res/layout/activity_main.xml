<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/back1"
        android:scaleType="centerCrop"
        android:alpha="0.5"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.5"
        android:scaleType="centerCrop"
        android:src="@drawable/back2" />

    <Button
        android:id="@+id/button"
        android:layout_width="286dp"
        android:layout_height="38dp"
        android:layout_above="@+id/create_account"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="55dp"
        android:layout_marginLeft="55dp"
        android:layout_marginEnd="55dp"

        android:layout_marginRight="55dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/boutton_background"
        android:text="SUBMIT"
        android:textColor="#FEFEFE"
        android:textSize="22dp" />

    <EditText
        android:id="@+id/email_sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/password_sign_in"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="109dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="89dp"
        android:layout_marginBottom="26dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="UserName"
        android:textColorHint="#FEFEFE"
        android:textSize="20px"
        android:textColor="#FEFEFE"/>

    <EditText
        android:id="@+id/password_sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="101dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="97dp"
        android:layout_marginBottom="30dp"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="Password"
        android:textColorHint="#FEFEFE"
        android:textSize="20px"
        android:textColor="#FEFEFE"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="233dp"
        android:layout_height="39dp"
        android:layout_above="@+id/email_sign_in"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="90dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="88dp"
        android:layout_marginBottom="30dp"
        android:text="SIGN IN"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textColor="#FEFEFE"
        />

    <TextView
        android:id="@+id/create_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="55dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="55dp"
        android:layout_marginRight="97dp"
        android:layout_marginBottom="59dp"
        android:text="create account"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textColor="#FEFEFE"/>


</RelativeLayout>