<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:layout_margin="8dp"
        android:id="@+id/card_recette_id">

        <RelativeLayout
            android:layout_width="430dp"
            android:layout_height="262dp">

            <ImageView
                android:id="@+id/image_recette"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/homeback" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/title_recette"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/difficulty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="5dp"
                    android:drawableLeft="@drawable/difficulty_icon"
                    android:drawablePadding="10dp"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:text="Description" />

                <TextView
                    android:id="@+id/nb_perssone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="5dp"
                    android:drawableLeft="@drawable/difficulty_icon"
                    android:drawablePadding="10dp"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:text="Description" />

                <TextView
                    android:id="@+id/time_recette"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="5dp"
                    android:drawableLeft="@drawable/difficulty_icon"
                    android:drawablePadding="10dp"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:text="Description" />


            </LinearLayout>


            <TextView
                android:id="@+id/title_recette"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_recette"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:text="Brochure"
                android:textColor="#262626"
                android:textSize="16sp" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>